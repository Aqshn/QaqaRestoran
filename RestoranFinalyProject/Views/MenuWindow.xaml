<Window x:Class="RestoranFinalyProject.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestoranFinalyProject.Views"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="#2C3E50">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>
        <TextBlock Background="#2C3E50" Grid.Row="0" FontSize="30" Foreground="White" Text="Menu:"/>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBlock Foreground="White" Text="Serin Ickiler:" FontSize="30"/>
            <Button Style="{StaticResource MyButtonStyle}" Width="400" x:Name="btn1" Content="Pive      12 azn" FontSize="30" Margin="10" Click="Btn1"/>
            <TextBlock Foreground="White" Text="Isti ickiler:" FontSize="30"/>
            <Button Style="{StaticResource MyButtonStyle}" Width="400" x:Name="btn2" Content="Kofe     7.4 azn" FontSize="30" Margin="10" Click="Btn1"/>
            <TextBlock Foreground="White" Text="Qelyanaltilar:" FontSize="30"/>
            <Button Style="{StaticResource MyButtonStyle}" Width="400" x:Name="btn3" Content="Dolma     11.2 azn" FontSize="30" Margin="10" Click="Btn1"/>
            <TextBlock Foreground="White" Text="Sorbalar:" FontSize="30"/>
            <Button Style="{StaticResource MyButtonStyle}" Width="400" x:Name="btn4" Content = "Merci     11.2 azn" FontSize="30" Margin="10" Click="Btn1"/>
            <Button Style="{StaticResource MyButtonStyle}" Width="400" x:Name="btn5" Content="Dovga      12 azn" FontSize="30" Margin="10" Click="Btn1"/>
        </StackPanel>
        <TextBlock Foreground="White" Grid.Column="1" Grid.Row="0" FontSize="30" Text="                                               Name       Price       Count"/>
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical"  >
            <TextBlock Foreground="White" Text="Serin Ickiler:" FontSize="30"/>
            <Button Style="{StaticResource MyButtonStyle}" Width="400" Name="_btn1" FontSize="30"  Content="Burada sizin reklam ola bilerdi" Margin="10" Click="Button_Click"/>
            <TextBlock Foreground="White" Text="Isti ickiler:" FontSize="30"/>
            <Button  Style="{StaticResource MyButtonStyle}" Width="400" Name="_btn2" FontSize="30"  Content="Burada sizin reklam ola bilerdi" Margin="10" Click="Button_Click"/>
            <TextBlock Foreground="White" Text="Qelyanaltilar:" FontSize="30" />
            <Button Style="{StaticResource MyButtonStyle}" Width="400" Name="_btn3" FontSize="30"  Content="Burada sizin reklam ola bilerdi" Margin="10" Click="Button_Click"/>
            <TextBlock Foreground="White" Text="Sorbalar:" FontSize="30" />
            <Button Style="{StaticResource MyButtonStyle}" Width="400" Name="_btn4" FontSize="30"  Content="Burada sizin reklam ola bilerdi" Margin="10" Click="Button_Click"/>
            <Button Style="{StaticResource MyButtonStyle}" Width="400" Name="_btn5" FontSize="30"  Content="Burada sizin reklam ola bilerdi" Margin="10" Click="Button_Click"/>
        </StackPanel>
        <Button Background="#FF7C8F8D" Foreground="White" Margin="6" x:Name="hesabBtn" Width="300" Height="170" Grid.Column="5" Grid.Row="5" Content="hesab" FontSize="20" Click="HesabClick"/>
    </Grid>
</Window>
